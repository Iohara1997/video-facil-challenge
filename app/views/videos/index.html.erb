
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Título</td>
            <td>URL</td>
            <td colspan="1">
        </tr>
    </thead>
    <tbody>
        <% @videos.each do |video| %>
        <tr>
            <td><%= video.title %></td>
            <td><%= video.url %></td>
            <td><%= button_to "Delete", video, method: :delete, class:"btn btn-danger", data: {confirm: "Tem certeza de que deseja remover permanentemente este vídeo?"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>
